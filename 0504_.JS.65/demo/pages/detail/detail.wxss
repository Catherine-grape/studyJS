@import '/common/css.wxss';
.container {
    width: 100%;
    margin-top: 50rpx;
}

.logo {
    width: 100%;
}
.logo image {
    display: block;
    width: 80%;
    margin: auto;
    height: 400rpx;
    box-shadow: 1px 1px 10px;
}

.title {
    margin: 30rpx auto;
    color: orangered;
    font-size: 44rpx;
    text-align: center;
}

.tags {
    font-size: 34rpx;
    color: rgb(255, 187, 0);
    margin: 0 auto 30rpx auto;
    text-align: center;
}

.tags text {
    border: 1px solid gold;
    padding: 3rpx 7rpx;
    margin-right: 10rpx;
    background: rgba(255, 217, 0, 0.267);
}

.detail-list {
    margin: 0 30rpx;
    position: relative;
}
.detail-list view {
    font-size: 32rpx;
    margin-bottom: 10rpx;
}
.dian-zan {
    color: red;
    margin-right: 10rpx;
    font-size: 22rpx;
}

.button {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: rgba(255, 68, 0, 0.521);
    text-align: center;
}

.music {
    font-size: 55rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    color: rgba(255, 0, 0, 0.144);
}