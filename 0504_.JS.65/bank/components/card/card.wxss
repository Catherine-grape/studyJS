/* components/card/card.wxss */
.container{
width: 100%;
  box-sizing: border-box;
  padding: 5rpx;
  margin-top: 20rpx;
}
.item{
  display: flex;
justify-content: space-between;
border-bottom:1rpx solid #cfcfcf;
}
.left{
  width: 30%;
}
.image{
  display:block;
  width: 100%;
  height: 180rpx;
}
.right{
width: 68%;
}
.content{
  color:lightcoral;
  margin:10rpx 0;
}
.tags text{
  background:lightsalmon;
  margin-right:10rpx;
  border:1rpx solid rgb(245, 148, 110);
  padding:0 5rpx;
  
}
