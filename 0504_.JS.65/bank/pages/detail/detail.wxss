/* pages/detail/detail.wxss */
.container{
  width: 100%;
  height: 100vh;
}
.image{
  width: 80%;
  height: 300rpx;
  margin:auto;
  margin-top:30rpx ;
  box-shadow: 5rpx 5rpx 10rpx 1rpx lightskyblue;
  display:block;
}
.titile{
  width: 100%;
  color:lightsalmon;
  margin:40rpx auto ;
  text-align: center ;
  font-size:40rpx;
}
.tags{
  width: 100%;
  display:flex;
  justify-content: center;
  margin:40rpx auto;
}
.tags text{
  background:lightsalmon;
  margin-right:10rpx;
  border:1rpx solid rgb(245, 148, 110);
  padding:0 5rpx;
}
.desc{
  box-sizing:border-box;
  padding-left: 30rpx;
}
.desc c{
  font-weight: 700;
  color:lightpink;
}
.button{
  width: 100%;
  display: block;
  position:fixed;
  bottom:0;
  left:25%;
}